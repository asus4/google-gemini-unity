<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement name="rootContainer" class="touch_keyboard_translator" style="width: 100%; height: 100%; padding: 16px;">
        <ui:ScrollView style="flex-grow: 1;">
            <ui:Label tabindex="-1" text="Label" parse-escape-sequences="true" display-tooltip-when-elided="true" />
        </ui:ScrollView>
        <ui:VisualElement name="inputContainer" style="flex-direction: row; align-items: stretch; border-width: 1; border-color: rgb(255, 255, 255); border-radius: 20px;">
            <ui:TextField name="promptTextField" hide-mobile-input="true" style="flex-grow: 1;" />
            <ui:Button name="sendButton" text="Send" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
